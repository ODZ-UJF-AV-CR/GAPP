{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ESNext",
        "types": ["node"],
        "paths": {},
        "sourceMap": false,
        "rewriteRelativeImportExtensions": true,
        "allowImportingTsExtensions": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
